# === NEW: Offer file-pick first (voice or typed) ===
    base_dir = Path(".").resolve()
    file_ctx, file_path = await pick_file_context_or_none(base_dir)

    # If a file was chosen, use it as the starting context
    if file_ctx:
        context = file_ctx
        print("📚 Context taken from file. Starting debate...\n")
